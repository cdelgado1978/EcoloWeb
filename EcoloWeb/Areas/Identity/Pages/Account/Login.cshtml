@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="row">
    <div class="col-md-4">
        <section>

        </section>
    </div>
    <div class="col-md-6 col-md-offset-3">
        <br />
        <section>
            <div align="center">
                <div class="row">
                    <div class="col-md-9 jumbotron">
                        <section>
                            <form id="account" method="post">
                                <h4 class="text-primary font-weight-bold"><i class="fas fa-user-circle"></i> LOGIN</h4>
                                <hr />


                                <div class="form-group text-left font-weight-bold">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group text-left font-weight-bold">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group font-weight-bold">
                                    <div class="checkbox">
                                        <label asp-for="Input.RememberMe">
                                            <input asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                    </p>
                                    <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                    </p>
                                </div>


                                <div class="">
                                    <button type="submit" class="btn btn-primary">INICIAR SESI&Oacute;N</button>
                                </div>

                            </form>
                        </section>
                    </div>

                </div>
            </div>
        </section>
    </div>
</div>


<div class="input-group">


</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}